<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://formationxml/filmprovider"
           xmlns:csgo="http://formationxml/filmprovider">
    <xs:element name="films">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="realisateur"  minOccurs="1" maxOccurs="unbounded"/>
                <xs:element ref="film" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="realisateur">
        <xs:complexType>
        <xs:sequence>
            <xs:element name="prenom" type="xs:string"/>
            <xs:element name="nom" type="xs:string"/>
        </xs:sequence>
            <xs:attribute name="id_realisateur" type="xs:ID"/>
        </xs:complexType>
        <xs:key name="pkRea">
            <xs:selector xpath="realisateur"/>
            <xs:field xpath="@id_realisateur"/>
        </xs:key>
        <xs:keyref refer="pkRea" name="fkRea">
            <xs:selector xpath="film"/>
            <xs:field xpath="@id_realisateur"/>
        </xs:keyref>
    </xs:element>

    <xs:element name="film">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titre" type="xs:string"/>
                <xs:element ref="resume"/>
            </xs:sequence>
            <xs:attribute name="id_film" type="xs:ID"/>
            <xs:attribute name="id_realisateur" type="xs:string"/>
            <xs:attribute name="annee" type="xs:string"/>
        </xs:complexType>
        <xs:key name="pkfilm">
            <xs:selector xpath="film"/>
            <xs:field xpath="@id_film"/>
        </xs:key>
    </xs:element>

    <xs:element name="resume">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="image" minOccurs="0" maxOccurs="1"/>
                <xs:element name="text" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="image">
        <xs:complexType>
            <xs:attribute name="source" type="xs:string"/>
        </xs:complexType>
    </xs:element>
</xs:schema>